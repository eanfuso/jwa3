<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>edu.it.controllers.LoginController</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>alumnos</servlet-name>
    <servlet-class>edu.it.controllers.AlumnosController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>random</servlet-name>
    <servlet-class>edu.it.controllers.InventarAlumnoController</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>clienteController</servlet-name>
    <servlet-class>edu.it.controllers.ClienteController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>alumnos</servlet-name>
    <url-pattern>/alumno</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>alumnos</servlet-name>
    <url-pattern>/alumno/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>random</servlet-name>
    <url-pattern>/inventaralumnos</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>clienteController</servlet-name>
    <url-pattern>/cliente</url-pattern>
  </servlet-mapping>
     <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/loguin</url-pattern>
  </servlet-mapping>

 <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/loguin/*</url-pattern>
  </servlet-mapping>

</web-app>
